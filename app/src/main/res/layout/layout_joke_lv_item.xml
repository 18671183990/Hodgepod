<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="6dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/joke_item_iv_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:src="@mipmap/person"/>

                <TextView
                    android:id="@+id/joke_item_tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="内容"
                    android:textColor="@android:color/holo_blue_bright"/>
            </LinearLayout>

            <TextView
                android:id="@+id/joke_item_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingExtra="7dp"
                android:paddingLeft="30dp"
                android:paddingRight="6dp"
                android:text="内容"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingRight="16dp">

                <ImageView
                    android:id="@+id/joke_item_iv_like"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/custome_bg_selector"
                    android:padding="10dp"
                    android:src="@mipmap/icon_xiao"/>

                <ImageView
                    android:id="@+id/joke_item_iv_cry"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/custome_bg_selector"
                    android:padding="10dp"
                    android:src="@mipmap/icon_shangxin"/>

                <ImageView
                    android:id="@+id/joke_item_iv_pinglun"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custome_bg_selector"
                    android:padding="10dp"
                    android:src="@mipmap/icon_pinglun"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>