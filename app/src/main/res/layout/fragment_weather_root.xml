                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:textColor="@color/color_white"
                        android:textSize="20sp"/>

                    <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0.1dp"-->
                    <!--android:background="@color/text_color_white"/>-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:text="实时天气"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"/>
                    <!--实时信息-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/weather_root_tv_realtime_today"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="时间"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:id="@+id/weather_root_tv_realtime_nongli"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="农历"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:id="@+id/weather_root_tv_realtime_weekly"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="星期"
                            android:textColor="#FFFFFF"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/weather_root_tv_realtime_weather"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="多云"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/weather_root_tv_realtime_temperature"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="29°"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/weather_root_tv_realtime_fengli"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="北风"
                            android:textColor="#FFFFFF"/>

                        <TextView
