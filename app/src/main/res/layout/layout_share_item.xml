<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:orientation="horizontal"
              android:padding="10dp">

    <TextView
        android:id="@+id/share_tv_weixin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/custome_bg_selector"
        android:clickable="true"
        android:drawableTop="@mipmap/icon_weixin"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="微信"/>

    <TextView
        android:id="@+id/share_tv_pengyou"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/custome_bg_selector"
        android:clickable="true"
        android:drawableTop="@mipmap/icon_friends"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="朋友圈"/>

    <TextView
        android:id="@+id/share_tv_qq"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/custome_bg_selector"
        android:clickable="true"
        android:drawableTop="@mipmap/icon_qq"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="QQ"/>

    <TextView
        android:id="@+id/share_tv_weibo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/custome_bg_selector"
        android:clickable="true"
        android:drawableTop="@mipmap/icon_weibo"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="微博"/>

</LinearLayout>